# Production environment variables for Martingale trading application
# Copy this file to .env.production and update the values for production deployment

# Flask configuration - REQUIRED IN PRODUCTION
SECRET_KEY=your-secure-random-secret-key-here
FLASK_ENV=production

# Application settings
INITIAL_CASH=100000

# Price service configuration
PRICE_SERVICE_URL=http://localhost:5001

# Security settings (automatically applied in production)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging level (INFO for production, DEBUG for development)
LOG_LEVEL=INFO